{
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "noEmitHelpers": true,
    "alwaysStrict": true,
    "target": "es2015",
    "outDir": "obj/tsc",
    "module": "ES2015",
    "baseUrl": ".",
    "moduleResolution": "node",
    "lib": [
      "DOM",
      "ES2015"
    ],
    "paths": {
      "edity.services.*": [
        "shim/*"
      ]
    }
  },
  "include": [
    "EditorCore/*",
    "Views/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "obj"
  ],
  "compileOnSave": true
}
